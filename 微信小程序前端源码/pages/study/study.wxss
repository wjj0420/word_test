.question{
  text-align:center;
}
.play_button {
 
  border-radius: 50%;
  background-color:rgb(253, 253, 253);
  display: flex;
  justify-content: center;
  align-items: center;
  
}

.play_icon {
  width: 40px;
  height: 40px;
  color: rgb(255, 248, 220);
}
.page_container {
  background-color: #dad0d0;
  height: 100vh;
  font-family: PingFang SC;
}
.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}
.top_bg {
  height: 120rpx;
}.btn {
  background-color:  #dad0d0; /* 按钮背景色 */
  color: rgb(66, 66, 66); /* 按钮文字颜色 */
  border:1px solid rgb(107, 107, 107); /* 无边框 */
  border-radius: 10px; /* 按钮圆角 */
  padding: 5px 10px; /* 按钮内边距 */
  text-align: center; /* 文字居中 */
  font-size: 17px; /* 字体大小 */
  width:100%; /* 按钮宽度，减去内边距的宽度 */
  min-width:100%;
  box-sizing: border-box; 
  margin: 5px 0; /* 按钮之间的垂直间距 */
}
.btn:hover {
  background-color: #9b9b9b; /* 悬停时按钮背景色 */
}
.back-button {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 60rpx; /* 按钮的宽度和高度设置为相同 */
  height: 60rpx;
  background-color: #b8b8b8; /* 按钮背景色 */
  color: rgb(110, 110, 110); /* 按钮文字颜色 */
  border: none;
  border-radius: 50%; /* 圆形按钮 */
  font-size: 40rpx; /* 字体大小 */
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  z-index: 1000; /* 确保按钮在最上层 */
  font-family: Arial Black, sans-serif;
  font-weight: 2000; 
}